<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <form action="/shope/edit?id={{info._id}}" method="post" enctype="multipart/form-data" class="mt-5 p-5">
                <h1 class="text-center"><b>Edit Your Product</b></h1>
                <div class="form-group mt-4">
                    <label for="exampleInputEmail1">Product Name</label>
                    <input type="text" name="pname" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" value="{{info.pname}}">

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Model Number</label>
                    <input type="text" name="mnumber" class="form-control" id="exampleInputPassword1"
                        value="{{info.mnumber}}">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Peoduct Type&emsp;:&emsp;</label>
                    <select name="type" id="cars">
                        <option value="Mobile Phone">Mobile Phone</option>
                        <option value="Laptop">Laptop</option>
                        <option value="Smart Watch">Smart Watch</option>
                        <option value="Others">Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Product Price â‚¹</label>
                    <input type="number" name="price" class="form-control" id="exampleInputPassword1"
                        value="{{info.price}}">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Discription</label>
                    <input style="height: 100px;" name="discription" type="text" class="form-control"
                        id="exampleInputPassword1" value="{{info.discription}}">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Product Image 1</label>
                    <input type="file" name="image1" class="form-control" id="exampleInputPassword1"
                        placeholder="image1">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Product Image 2</label>
                    <input type="file" name="image2" class="form-control" id="exampleInputPassword1"
                        placeholder="image2">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Product Image 3</label>
                    <input type="file" name="image3" class="form-control" id="exampleInputPassword1"
                        placeholder="image3">
                </div>

                <button type="submit" class="btn btn-primary mt-2" style="width: 100%;">Submit</button>
            </form>
        </div>

    </div>
</div>