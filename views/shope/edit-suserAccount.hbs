<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mt-5 pt-5">
            <form action="/shope/editaccount" method="post" enctype="multipart/form-data" class="p-5">
                <h1 class="text-center" style="font-family: serif;"><b><i>Edit Your Details...</i></b></h1>
                <div class="form-group" style="width: 100%;">
                    
                   <div class="text-center">
                    <img src="/Shope_image/{{info.id}}.jpg" class="p-3"
                        style="width: 200px; height: 200px; border-radius: 100%; " alt="Profile Photo">
                   </div> <br>
                    <label for="exampleInputEmail1">Update Image :</label> 
                    <input type="file" name="image" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Shope Name :</label>
                    <input type="text" name="sname" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" value="{{info.sname}}">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Shope Address :</label>
                    <input type="text" name="address" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" value="{{info.address}}">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Shope pincode :</label>
                    <input type="text" name="pincode" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" value="{{info.pincode}}">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Shope Location(Googel Map URL) :</label>
                    <input type="text" name="location" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        value="{{info.location}}">
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%;">Submit</button>
            </form>
        </div>
    </div>
</div>