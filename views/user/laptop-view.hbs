<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mt-5">
            <div class="mt-3 text-center" style="width: 100%; height: auto;">
                <h1 class="text-center text-light" style="font-family: serif;"><b><i>{{shop.sname}}</i></b></h1>
                <div class="mt-4">
                    <p class="text-right mr-3 mt-3 text-light" style="display: inline; color: #343a40;"><a href="{{shop.pnumber}}"
                            id="p1" style="text-decoration: none;"><i class="material-icons">local_phone</i>&nbsp;Mobile
                            Number&nbsp;</a></p>
                    <p class="text-center mr-3 text-light" style="display: inline;"><a href="{{shop.email}}" id="p2"
                            style="text-decoration: none;"><i class="material-icons">rate_review</i>&nbsp;Mail
                            Address&nbsp;</a></p>
                    <p class="text-center mr-3 text-light" style="display: inline;"><a href="{{shop.location}}" id="p3"
                            style="text-decoration: none;"><i class="material-icons">place</i>&nbsp;Location</a></p>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">

            <div class="mt-4" style="background-color: #343a40; text-align: center;">
                <a href="/intoshop?id={{shop._id}}" class="btn btn-dark " style="width: 100%; color: #ffc107;"
                    id="mob">MOBILES</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mt-4" style="background-color: #ffc107;text-align: center;">
                <a href="/laoptoppro?id={{shop._id}}" class="btn btn-warning" style="width: 100%;">LAPTOPS</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mt-4" style="background-color: #343a40; text-align: center;">
                <a href="/smartwatch?id={{shop._id}}" class="btn btn-dark" style="width: 100%; color: #ffc107;">Smart Watch</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mt-4" style="background-color: #343a40; text-align: center;">
                <a href="/otherpro?id={{shop._id}}" class="btn btn-dark" style="width: 100%; color: #ffc107;">OTHERS</a>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12 mt-5">
            <table class="table text-light" id="laptable">
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Model Number</th>
                        <th scope="col">Price</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Image 1</th>
                        <th scope="col">Image 2</th>
                        <th scope="col">Image 3</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each lap}}
                    <tr>
                        <td class="pt-5">{{@index}}</td>
                        <td class="pt-5">{{this.pname}}</td>
                        <td class="pt-5">{{this.mnumber}}</td>
                        <td class="pt-5">{{this.price}}</td>
                        <td class="pt-5">{{this.discription}}</td>
                        <td><img src="/product-image/{{this._id}}1.jpg" style="width: 100px; height: 100px;"
                                alt="Product Image1"> </td>
                        <td> <img src="/product-image/{{this._id}}2.jpg" style="width: 100px; height: 100px;"
                                alt="Product Image2"> </td>
                        <td> <img src="/product-image/{{this._id}}3.jpg" style="width: 100px; height: 100px;"
                                alt="Product Image">
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    #p1:hover {
        font-size: 20px;
        color: black;
    }

    #p2:hover {
        font-size: 20px;
        color: black;
    }

    #p3:hover {
        font-size: 20px;
        color: black;
    }
