<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mt-5">
            <div class="mt-3 text-center" style="width: 100%; height: auto;">
                <h1 class="text-center text-light" style="font-family: serif;"><b><i>{{shop.sname}}</i></b></h1>
                <div class="mt-4">
                    <p class="text-right mr-3 mt-3 text-light" style="display: inline; color: #343a40;"><a href="{{shop.pnumber}}"
                            id="p1" style="text-decoration: none;"><i class="material-icons">local_phone</i>&nbsp;Mobile
                            Number&nbsp;</a></p>
                    <p class="text-center mr-3 text-light" style="display: inline;"><a href="{{shop.email}}" id="p2"
                            style="text-decoration: none;"><i class="material-icons">rate_review</i>&nbsp;Mail
                            Address&nbsp;</a></p>
                    <p class="text-center mr-3 text-light" style="display: inline;"><a href="{{shop.location}}" id="p3"
                            style="text-decoration: none;"><i class="material-icons">place</i>&nbsp;Location</a></p>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
        
            <div class="mt-4" style="background-color: #535e78; text-align: center;">
                <a href="/intoshop?id={{shop._id}}" class="btn  " style="width: 100%; color: #f8f8f6;" id="mobbtn">MOBILES</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mt-4" style="background-color: #535e78;text-align: center;">
                <a href="/laoptoppro?id={{shop._id}}" class="btn text-light" style="width: 100%;" id="mobbtn">LAPTOPS</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mt-4" style="background-color: #22447d; text-align: center;">
                <a href="/smartwatch?id={{shop._id}}" class="btn" style="width: 100%; color: #fafaf8;" id="mobbtn">Smart
                    Watch</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="mt-4" style="background-color: #22447d; text-align: center;">
                <a href="/otherpro?id={{shop._id}}" class="btn" style="width: 100%; color: #f8f7f5;" id="mobbtn">OTHERS</a>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12 mt-5">
            <table class="table text-light" id="mobtable">
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Model Number</th>
                        <th scope="col">Price</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Image 1</th>
                        <th scope="col">Image 2</th>
                        <th scope="col">Image 3</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each pro}}
                    <tr>
                        <td class="pt-5"><a href="/proinfos?id={{this._id}}">{{@index}}</a></td>
                        <td class="pt-5"><a href="/proinfos?id={{this._id}}">{{this.pname}}</a></td>
                        <td class="pt-5"><a href="/proinfos?id={{this._id}}">{{this.mnumber}}</a></td>
                        <td class="pt-5"><a href="/proinfos?id={{this._id}}">{{this.price}}</a></td>
                        <td class="pt-5"><a href="/proinfos?id={{this._id}}">{{this.discription}}</a></td>
                        <td ><a href="/proinfos?id={{this._id}}"><img src="/product-image/{{this._id}}1.jpg" style="width: 100px; height: 100px;" alt="Product Image"></a> </td>
                        <td> <a href="/proinfos?id={{this._id}}"><img src="/product-image/{{this._id}}2.jpg" style="width: 100px; height: 100px;" alt="Product Image"></a> </td>
                        <td><a href="/proinfos?id={{this._id}}"><img src="/product-image/{{this._id}}3.jpg" style="width: 100px; height: 100px;" alt="Product Image"></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    #p1:hover {
        font-size: 20px;
        color: black;
    }

    #p2:hover {
        font-size: 20px;
        color: black;
    }

    #p3:hover {
        font-size: 20px;
        color: black;
    }
    #mobbtn:hover
    {
        background-color: red;
    }
</style>

