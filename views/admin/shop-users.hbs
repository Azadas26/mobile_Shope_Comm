<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mt-5 p-5">
            <table class="table mt-5 text-light" id="shopusers">
                <h1 class="text-light text-center"><b><i>Available Shops</i></b></h1>
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Shop Name</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">Password</th>
                        <th scope="col">Address</th>
                        <th scope="col">Pincode</th>
                        <th scope="col">Sub Distric</th>
                        <th scope="col">Location</th>
                        <th scope="col">Image</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each shop}}
                        <tr>
                            <td>{{@index}}</td>
                            <td>{{this.sname}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.password}}</td>
                            <td>{{this.address}}</td>
                            <td>{{this.pincode}}</td>
                            <td>{{this.subdistric}}</td>
                            <td><a href="{{this.location}}" class="btn btn-warning text-dark" style="text-decoration: none;">Location</a></td>
                            <td><img src="/Shope_image/{{this.id}}.jpg" alt="" style="width: 100px; height: auto;"></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>